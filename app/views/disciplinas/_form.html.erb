<%= form_with(model: disciplina) do |form| %>
  <% if disciplina.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(disciplina.errors.count, "error") %> prohibited this disciplina from being saved:</h2>

      <ul>
        <% disciplina.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :carga_horaria %>
    <%= form.number_field :carga_horaria %>
  </div>

  <div class="field">
    <%= form.label :docente_id %>
    <%= form.collection_select :docente_id, Docente.order(:nome), :id, :nome %>
  </div>

  <div class="field">
    Discentes
    <div class="checkboxes">
      <%= form.collection_check_boxes :discente_ids, Discente.order(:nome), :id, :nome %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Criar Disciplina', class: 'view-button' %>
  </div>
<% end %>
