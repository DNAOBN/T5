<p id="notice"><%= notice %></p>

<h1>Discentes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discentes.each do |discente| %>
      <tr>
        <td><%= discente.nome %></td>
        <td><%= link_to 'Show', discente %></td>
        <td><%= link_to 'Edit', edit_discente_path(discente) %></td>
        <td><%= link_to 'Excluir', discente, method: :delete, data: { confirm: 'Tem certeza que quer deletar este registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Discente', new_discente_path %>
